@{
    ViewBag.Title = "Program Landing Page";
    Layout = "~/Views/Shared/_ProgramDetails.cshtml";
}
<style>
    ul {
  margin: 0;
}
ul.dashed {
  list-style-type: none;
}
ul.dashed > li {
  text-indent: -5px;
}
