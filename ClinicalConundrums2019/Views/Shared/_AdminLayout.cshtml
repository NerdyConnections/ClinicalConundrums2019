@using ClinicalConundrums2019.Util;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="https://fonts.googleapis.com/css?family=Oswald:200,300,400" rel="stylesheet">
    <link rel="icon" href="data:;base64,iVBORw0KGgo=">

    <link href="/Content/bootstrap.css" rel="stylesheet" />
    <link href="/Content/Site.css" rel="stylesheet" />
    <link href="/Content/Login.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>

    <script src="~/Scripts/bootstrap.js"></script>


    <script src="~/Scripts/jquery.validate.js"></script>

    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>





</head>
<body style="background-image:url('/Images/bg2-prog.jpg');">
    <div class="navbar navbar-inverse">
        <!--navbar-fixed-top-->
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                        <div id="logo">
                            <div style="" class="logo-img">
                            
                            </div>
                            <div class="logo-txt">

                            </div>
                            <div class="logo-txt-sub">CPD Portal</div>
                            <div class="logo-txt-welcome">Welcome @UserHelper.GetLoggedInUser().LastName, @UserHelper.GetLoggedInUser().FirstName</div>
                        </div>
                    </div>

                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav float-right" style="float: right">
                            <li><a href="#">Help Centre</a></li>
                            <li><a href="#">Contact Us</a></li>
                            <li>@Html.ActionLink("Log Out", "LogOff", "Account", routeValues: null, htmlAttributes: new { id = "ctrlLogOut" })</li>



                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>



    <div class="container footer1">
        <div class="row footer1-cnt">
            <div class="col-xs-12 col-sm-12 col-md-7">
                <!-- test 1234-->
                <div style="float: left; margin-right: 50px">
                    <object type="image/svg+xml" data="/Images/CHRC.svg" width="110"></object>
                </div>
                <div style="float: left;">
                    <object type="image/svg+xml" data="/Images/CCPD.svg" width="120"></object>
                </div>
            </div>

            <div class="col-xs-12  col-sm-12 col-md-1 footer">&nbsp;</div>
            <div class="col-xs-12  col-sm-12 col-md-4 footer">
                <b>Lianne Goldin</b>, CCMEP
                <br />
                Executive Director, Department of Continuing Medical Education<br />
                Operations and Business Affairs<br />
                <a href="mailto:lgoldin@chrc.net">lgoldin@chrc.net</a><br />
                416-977-8010 ext. 229<br />
            </div>

        </div>
    </div>


    @RenderSection("Scripts", required: false)
</body>
</html>
