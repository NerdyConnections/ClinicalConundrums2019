@model ClinicalConundrums2019.Models.ProgramSessionPayment

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetProgramSessionPayment</title>
</head>
<body>
    <table width="100%" cellspacing="0" cellpadding="10" border="0" align="right">
        <tbody>
            <tr>
                <td width="10%">Speaker:</td>
                <td width="90%">@Model.SpeakerFirstName @Model.SpeakerLastName</td>
            </tr>
            <tr>
                <td>
                    Amount:
                </td>
                <td> @Model.SpeakerPaymentAmount</td>
            </tr>
            <tr>
                <td>Method:</td>
                <td>Cheque</td>
            </tr>
            <tr>
                <td>Date Sent:</td>
                <td>@Model.SpeakerPaymentSentDate</td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>

            @if (Model.ProgramSpeaker2ID != 0)
            {
                <tr>
                    <td width="10%">Speaker 2:</td>
                    <td width="90%">@Model.Speaker2FirstName @Model.Speaker2LastName</td>
                </tr>
                <tr>
                    <td>
                        Amount:
                    </td>
                    <td> @Model.Speaker2PaymentAmount</td>
                </tr>
                <tr>
                    <td>Method:</td>
                    <td>Cheque</td>
                </tr>
                <tr>
                    <td>Date Sent:</td>
                    <td>@Model.Speaker2PaymentSentDate</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            }



            @if (Model.ProgramModeratorID != 0)
            {
                <tr>
                    <td width="10%">Moderator:</td>
                    <td width="90%">@Model.ModeratorFirstName @Model.ModeratorLastName</td>
                </tr>
                <tr>
                    <td>
                        Amount:
                    </td>
                    <td> @Model.ModeratorPaymentAmount</td>
                </tr>
                <tr>
                    <td>Method:</td>
                    <td>Cheque</td>
                </tr>
                <tr>
                    <td>Date Sent:</td>
                    <td>@Model.ModeratorPaymentSentDate</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            }
            <tr>
                <td style="border-top:thin #999 solid; padding-top:10px">Third Party </td>
                <td style="border-top:thin #999 solid">&nbsp;</td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td>AV Fees</td>
                <td>@Model.AVFees</td>
            </tr>

            <tr>
                <td>Venue Fees </td>
                <td>@Model.VenueFees</td>
            </tr>

            <tr>
                <td>Other Fees </td>
                <td>@Model.OtherFees</td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
        </tbody>
    </table>
</body>
</html>
